{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <main class="container">
        <section class="row">
            <div class="col-md-12">
                <h1 class="txt_cent">Authentication form</h1>
            </div>
            <form action="{{ path('login') }}" method="post">
                <div class="form-group " align="center">
                    <label>
                        <input type="text" class="form-control" id="username" name="_username" placeholder="email">
                    </label>
                </div>
                <div class="form-group" align="center">
                    <label>
                        <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                    </label>
                </div>
                <div class="form-group" align="center">
                    <button type="submit" class="btn btn-primary">Connexion</button>
                </div>
            </form>
        </section>
    </main>

{% endblock %}